---
interface Props {
	title?: string;
	description?: string;
	highlights?: Array<{
		icon: string;
		title: string;
		description: string;
	}>;
}

const { 
	title = "Sobre Mí",
	description = "Soy un creador multidisciplinario apasionado por dar vida a ideas a través del arte digital, el desarrollo de videojuegos y la ilustración. Mi objetivo es crear experiencias memorables que conecten con las personas.",
	highlights = [
		{ icon: "01", title: "Enfocado", description: "Orientado a resultados" },
		{ icon: "02", title: "Creativo", description: "Soluciones innovadoras" },
		{ icon: "03", title: "Proactivo", description: "Siempre aprendiendo" },
	]
} = Astro.props;
---

<section class="introduction section" id="introduction">
	<div class="container">
		<div class="intro-content">
			<div class="intro-text">
				<h2 class="section-title">{title}</h2>
				<p class="intro-description">{description}</p>
			</div>
			<div class="intro-highlights">
				{highlights.map((highlight) => (
					<div class="highlight-card">
						<span class="highlight-icon">{highlight.icon}</span>
						<h3 class="highlight-title">{highlight.title}</h3>
						<p class="highlight-description">{highlight.description}</p>
					</div>
				))}
			</div>
		</div>
	</div>
</section>

<style>
	.introduction {
		background: linear-gradient(180deg, var(--color-background) 0%, var(--color-surface) 50%, var(--color-background) 100%);
	}

	.intro-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-3xl);
		align-items: center;
	}

	.intro-text {
		max-width: 500px;
	}

	.intro-description {
		font-size: 1.125rem;
		color: var(--color-text-muted);
		line-height: 1.8;
	}

	.intro-highlights {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-lg);
	}

	.highlight-card {
		display: flex;
		align-items: center;
		gap: var(--spacing-lg);
		padding: var(--spacing-lg);
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		transition: 
			transform var(--transition-fast),
			border-color var(--transition-fast),
			box-shadow var(--transition-fast);
	}

	.highlight-card:hover {
		transform: translateX(10px);
		border-color: var(--color-primary);
		box-shadow: var(--shadow-glow);
	}

	.highlight-icon {
		font-size: 2rem;
		flex-shrink: 0;
	}

	.highlight-title {
		font-size: 1.125rem;
		font-weight: 600;
		margin-bottom: var(--spacing-xs);
	}

	.highlight-description {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	@media (max-width: 768px) {
		.intro-content {
			grid-template-columns: 1fr;
			gap: var(--spacing-2xl);
		}

		.intro-text {
			text-align: center;
			max-width: 100%;
		}

		.highlight-card:hover {
			transform: translateY(-5px);
		}
	}
</style>
