---
interface SocialLink {
	name: string;
	url: string;
	icon: string;
}

interface Props {
	name?: string;
	email?: string;
	socialLinks?: SocialLink[];
	copyright?: string;
}

const currentYear = new Date().getFullYear();

const {
	name = "Samantha Gámez Meade",
	email = "contacto@ejemplo.com",
	socialLinks = [
		{
			name: "ArtStation",
			url: "https://artstation.com",
			icon: "artstation",
		},
		{ name: "LinkedIn", url: "https://linkedin.com", icon: "linkedin" },
		{ name: "GitHub", url: "https://github.com", icon: "github" },
	],
	copyright = `© ${currentYear} Todos los derechos reservados.`,
} = Astro.props;
---

<footer class="footer" id="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-main">
				<h3 class="footer-name">{name}</h3>
				<p class="footer-tagline">Game Artist | Monterrey, México</p>
				<a href={`mailto:${email}`} class="footer-email">{email}</a>
			</div>

			<div class="footer-links">
				<h4 class="footer-section-title">Navegación</h4>
				<nav class="footer-nav">
					<a href="#landing">Inicio</a>
					<a href="#introduction">Sobre mí</a>
					<a href="#categories">Trabajo</a>
					<a href="#videojuegos">Videojuegos</a>
					<a href="#modelos3d">Modelos 3D</a>
					<a href="#ilustraciones">Ilustraciones</a>
				</nav>
			</div>

			<div class="footer-social">
				<h4 class="footer-section-title">Sígueme</h4>
				<div class="social-links">
					{
						socialLinks.map((link) => (
							<a
								href={link.url}
								class="social-link"
								target="_blank"
								rel="noopener noreferrer"
								aria-label={link.name}
							>
								{link.icon === "github" && (
									<svg
										viewBox="0 0 24 24"
										fill="currentColor"
										width="24"
										height="24"
									>
										<path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.385-1.335-1.755-1.335-1.755-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.605-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12" />
									</svg>
								)}
								{link.icon === "linkedin" && (
									<svg
										viewBox="0 0 24 24"
										fill="currentColor"
										width="24"
										height="24"
									>
										<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
									</svg>
								)}
								{link.icon === "twitter" && (
									<svg
										viewBox="0 0 24 24"
										fill="currentColor"
										width="24"
										height="24"
									>
										<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
									</svg>
								)}
								{link.icon === "artstation" && (
									<svg
										viewBox="0 0 24 24"
										fill="currentColor"
										width="24"
										height="24"
									>
										<path d="M0 17.723l2.027 3.505h.001a2.424 2.424 0 0 0 2.164 1.333h13.457l-2.792-4.838H0zm24 .025c0-.484-.143-.935-.388-1.314L15.728 2.728a2.424 2.424 0 0 0-2.142-1.289H9.419L21.598 22.54l1.92-3.325c.378-.637.482-.919.482-1.467zm-11.129-3.462L7.428 4.858l-5.444 9.428h10.887z" />
									</svg>
								)}
							</a>
						))
					}
				</div>
			</div>
		</div>

		<div class="footer-bottom">
			<p class="copyright">{copyright}</p>
			<button
				class="back-to-top"
				id="back-to-top"
				aria-label="Volver arriba"
			>
				<svg
					width="20"
					height="20"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
				>
					<path d="M12 19V5M5 12l7-7 7 7"></path>
				</svg>
			</button>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: linear-gradient(135deg, #007750 0%, #005a3c 100%);
		border-top: none;
		padding: var(--spacing-3xl) 0 var(--spacing-xl);
		color: white;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		gap: var(--spacing-3xl);
		margin-bottom: var(--spacing-2xl);
	}

	.footer-main {
		max-width: 300px;
	}

	.footer-name {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: var(--spacing-sm);
		color: white;
	}

	.footer-tagline {
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: var(--spacing-md);
	}

	.footer-email {
		color: #a8f0d8;
		transition: color var(--transition-fast);
	}

	.footer-email:hover {
		color: white;
	}

	.footer-section-title {
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: rgba(255, 255, 255, 0.7);
		margin-bottom: var(--spacing-lg);
	}

	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.footer-nav a {
		color: rgba(255, 255, 255, 0.7);
		font-size: 0.875rem;
		transition: color var(--transition-fast);
		width: fit-content;
		display: block;
	}

	.footer-nav a:hover {
		color: #a8f0d8;
	}

	.social-links {
		display: flex;
		gap: var(--spacing-md);
	}

	.social-link {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.15);
		border-radius: var(--radius-md);
		color: white;
		transition:
			background var(--transition-fast),
			transform var(--transition-fast);
	}

	.social-link:hover {
		background: rgba(255, 255, 255, 0.3);
		transform: translateY(-3px);
	}

	.footer-bottom {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top: var(--spacing-xl);
		border-top: 1px solid rgba(255, 255, 255, 0.2);
	}

	.copyright {
		font-size: 0.875rem;
		color: rgba(255, 255, 255, 0.7);
	}

	.back-to-top {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.15);
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: var(--radius-md);
		color: white;
		transition:
			background var(--transition-fast),
			border-color var(--transition-fast);
	}

	.back-to-top:hover {
		background: rgba(255, 255, 255, 0.3);
		border-color: rgba(255, 255, 255, 0.5);
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: var(--spacing-2xl);
			text-align: center;
		}

		.footer-main {
			max-width: 100%;
		}

		.footer-nav {
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: center;
		}

		.social-links {
			justify-content: center;
		}

		.footer-bottom {
			flex-direction: column;
			gap: var(--spacing-lg);
		}
	}
</style>

<script>
	document.getElementById("back-to-top")?.addEventListener("click", () => {
		window.scrollTo({ top: 0, behavior: "smooth" });
	});
</script>
